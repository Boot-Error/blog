--- 
layout: base.njk 
title: "Blog Index"
type: index
---

{% from "macros/tags.njk" import tags %}
{% from "macros/cards.njk" import postCard %}

{% include 'partials/blog-nav.njk' %}

<header class="container mx-auto px-5 pt-10 max-w-screen-md">
  {% include 'partials/blog-header.njk' %}
</header>

{% set collectionTags = collections.allTags %}
<div class="the-box">
  <p class="text-2xl">My interests</p>
  <div class="pt-2 text-lg">
    {{ tags(collectionTags) }}
  </div>
</div>

<section class="the-box mt-10 md:py-20">
  {% for year, yearPosts in collections.postsByYear %}
    <article class="mt-3">
      {# <h2 class="font-bold text-2xl">{{ year }}</h2> #}
      <div class="grid divide-y divide-primary">
        {% for post in yearPosts | reverse %}
          {{ postCard(post) }}
        {% endfor %}
      </div>
    </article>
  {% endfor %}
</section>

{% include 'partials/blog-footer.njk' %}