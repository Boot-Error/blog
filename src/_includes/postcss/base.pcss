@tailwind base;
@tailwind components;
@tailwind utilities;

body {
  @apply bg-paper font-sans;
}

.the-box {
  @apply container max-w-screen-md mx-auto px-5;
}

h1 {
  @apply font-bold text-4xl;
}

h2 {
  @apply font-bold text-3xl;
}

h3 {
  @apply font-semibold text-2xl;
}

a {
  @apply hover:underline;
}
