{% from 'macros/tags.njk' import tags as displayTags %}
<html lang="en">
  <head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta name="description" content="{{ post.data.tldr }}"/>
    <title>{{ title }}</title>
    {% include 'partials/imports.njk' %}
    <link rel="stylesheet" href="/css/blog.css"/>
    <link rel="stylesheet" href="/css/prism-theme.css">
  </head>
  <body>
    <main>
      {% include 'partials/blog-nav.njk' %}
      <div class="container max-w-screen-md mx-auto lg:mt-20 bg-paper">
        <article>
          <header class="px-5 pt-7 pb-4">
            <h1 class="text-5xl py-3 leading-snug">{{ title }}</h1>
            <div class="flex display-y pt-2 pb-4 display-grey-500">
              <time datetime="{{ page.date }}" class="text-base text-primary font-bold">
                {{ page.date | prettyDate }}
              </time>
              <div class="text-base pl-5">{{ displayTags(tags) }}</div>
            </div>
          </header>
          {{ content | safe }}
        </article>
      </div>
    </main>
    {% include 'partials/blog-footer.njk' %}
    {% include 'partials/serviceworker.njk' %}
  </body>
</html>
